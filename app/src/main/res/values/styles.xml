<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!--   app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_indicator</item>

        <item name="colorButtonNormal">@color/charge_green_light_background</item>
        <item name="colorControlNormal">@color/charge_green</item>
        <item name="colorControlActivated">@color/primary_500</item>

<!--        <item name="preferenceTheme">@style/PreferenceLightTheme</item>-->
<!--        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>-->
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/screen_launch</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PreferenceLightTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/primaryTextLightX</item>
        <item name="android:textColorPrimary">@color/primaryTextLightX</item>
        <item name="android:textColorSecondary">@color/secondaryTextLightX</item>
    </style>

    <style name="PreferenceDarkTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/primaryTextDarkX</item>
        <item name="android:textColorPrimary">@color/primaryTextDarkX</item>
        <item name="android:textColorSecondary">@color/secondaryTextDarkX</item>
    </style>

<!--    <style name="AppTheme.PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">-->
<!--        <item name="android:colorAccent">@android:color/black</item>-->
<!--    </style>-->

